<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/back"
    tools:context="com.valdroide.mycitysshopsadm.main.account.ui.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewName"
                style="@style/TextView_Account_Name"
                android:text="NOMBRE"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/textViewName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_crop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextPhoneHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViewLogo"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/editTextPhone"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_phone"
                            android:hint="@string/hint_number_phone"
                            android:inputType="phone"
                            android:maxLength="20"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextWhatsaapHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextPhoneHint">

                        <EditText
                            android:id="@+id/editTextWhatsaap"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_whatsapp"
                            android:hint="@string/hint_number_whatsapp"
                            android:inputType="phone"
                            android:maxLength="20"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextEmailHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextWhatsaapHint">

                        <EditText
                            android:id="@+id/editTextEmail"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_mail"
                            android:hint="@string/hint_email"
                            android:inputType="textEmailAddress"
                            android:maxLength="40"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextWebHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextEmailHint">

                        <EditText
                            android:id="@+id/editTextWeb"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_internet"
                            android:hint="@string/hint_web"
                            android:inputType="textEmailAddress"
                            android:maxLength="100"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextFaceHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextWebHint">

                        <EditText
                            android:id="@+id/editTextFace"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_facebook"
                            android:hint="@string/hint_face"
                            android:inputType="textEmailAddress"
                            android:maxLength="100"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextInstaHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextFaceHint">

                        <EditText
                            android:id="@+id/editTextInsta"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_instagram"
                            android:hint="@string/hint_insta"
                            android:inputType="textEmailAddress"
                            android:maxLength="100"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextTwitterHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextInstaHint">

                        <EditText
                            android:id="@+id/editTextTwitter"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_twitter"
                            android:hint="@string/hint_twitter"
                            android:inputType="textEmailAddress"
                            android:maxLength="100"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextSnapHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextTwitterHint">

                        <EditText
                            android:id="@+id/editTextSnap"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_snapchat"
                            android:hint="@string/hint_snap"
                            android:inputType="textEmailAddress"
                            android:maxLength="100"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextDescriptionHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextSnapHint">

                        <EditText
                            android:id="@+id/editTextDescription"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_description"
                            android:hint="@string/hint_description"
                            android:maxLength="200"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextAddressHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextDescriptionHint">

                        <EditText
                            android:id="@+id/editTextAddress"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_address"
                            android:hint="@string/hint_address"
                            android:maxLength="40"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/editTextWorkingHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTextAddressHint">

                        <EditText
                            android:id="@+id/editTextWorking"
                            style="@style/EditText_Style_Account"
                            android:drawableLeft="@drawable/ic_working_hours"
                            android:hint="@string/hint_working"
                            android:maxLength="100"
                            android:textSize="13dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
